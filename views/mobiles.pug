extends layout

block content
  h1= title
  p Welcome to #{title}
  - let items = results
  div(class="container-fluid") 
    div(class="row m-1") 
      each item in items  
        - let destination = `dispatch(\"/costumes/update?id=${item._id}\")` 
        div(class="row-sm-2", class="m-1") Item #{item.costume_type}(#{item.size}) is #{item.cost} 
          button.btn( class="btn-primary ml-1", onclick= destination) Update 
   
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 
 
  div(class="container-fluid")
    div(class="row")
      each mobiles, index in items
        div(class="col-sm-2" onclick=`buy(${index+1})`) #{mobiles.mobile_brand} - #{mobiles.mobile_color} - $#{mobiles.mobile_cost}
  
  script.
    function buy(index){
      alert(`You purchased item ${index}`);
    }